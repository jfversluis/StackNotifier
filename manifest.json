{
    "name": "StackNotifier",
    "version": "1.0",
    "description": "Get notified about your favorite tags on StackOverflow",
    "manifest_version": 2,
    "permissions": [
        "storage",
        "notifications",
        "alarms",
        "https://api.stackexchange.com/*",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "lib/jquery-3.0.0.min.js",
            "app/background.js"
        ]
    },
    "options_page": "app/settings.html",
    "browser_action": {
        "default_popup": "app/popup.html",
        "default_icon": {
            "16": "img/icon16.png",
            "32": "img/icon32.png",
            "48": "img/icon48.png",
            "128": "img/icon128.png"
        }
    },
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "content_security_policy": "script-src 'self' https://api.stackexchange.com; object-src 'self'"
}